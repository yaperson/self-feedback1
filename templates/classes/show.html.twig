                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Classe_libelle</th>
                <td>{{ class.classeLibelle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('classes_index') }}" class="btn5" >back to list</a>

    <a href="{{ path('classes_edit', {'id': class.id}) }}" class="btn5" >edit</a>

