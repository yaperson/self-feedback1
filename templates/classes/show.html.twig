{% extends 'base-user.html.twig' %}

{% block title %}Classes{% endblock %}

{% block stylesheets %}
   <link rel="stylesheet" href="..css/style.css">
   <link rel="stylesheet" href="..css/dashboard.css">
   <link rel="stylesheet" href="..css/table.css">
<style>
    table {
        border: solid #424242 0px !important;
        width: 100%;
    }
    
    tr {
        background-color: #2dabe10c;
    }
    
    tr:hover {
        background-color: #2dabe136;
    }
    
    tr:active {
        background-color: #2dabe150;
    }

    .table_title {
        background-color: #b8e6fa;
        position: sticky;
        top: 63px;
    }
</style>
